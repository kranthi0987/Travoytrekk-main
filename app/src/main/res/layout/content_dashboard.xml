<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sanjay.travoytrekk.Dashboard"
    tools:showIn="@layout/app_bar_dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/rainbow"
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:layout_marginBottom="64dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_rainbow_color_3f9e6c832c37faff_512x512" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_home" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/gallery"
            android:layout_width="103dp"
            android:layout_height="103dp"
            android:layout_weight="1"
        app:srcCompat="@drawable/ic_gallery" />

    <ImageButton
        android:id="@+id/shopping"
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_shopping" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/facebook_button"
            android:layout_width="77dp"
            android:layout_height="92dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/facebooklogo" />

        <ImageView
            android:id="@+id/whatsapp_button"
            android:layout_width="77dp"
            android:layout_height="92dp"

            android:layout_weight="1"
            app:srcCompat="@drawable/whatsapp" />
    </LinearLayout>

</LinearLayout>
